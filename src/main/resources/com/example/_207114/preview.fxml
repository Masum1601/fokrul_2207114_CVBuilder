<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example._207114.previewcontroller">
    <content>
        <VBox alignment="TOP_CENTER" prefWidth="700.0" spacing="0" style="-fx-background-color: #ffffff;">
            <children>

                <VBox alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e); -fx-padding: 30 20 30 20;">
                    <children>
                        <HBox alignment="CENTER" spacing="30">
                            <children>
                                <ImageView fx:id="previewImageView" fitHeight="140.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 10, 0.5, 0, 2); -fx-border-radius: 70; -fx-background-radius: 70;" />

                                <VBox alignment="CENTER_LEFT" spacing="5">
                                    <children>
                                        <Label fx:id="previewFullName" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Your Name Here" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="32.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="previewHeading" style="-fx-text-fill: #ecf0f1; -fx-font-style: italic;" text="PROFESSIONAL RESUME">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <HBox alignment="CENTER" spacing="40" style="-fx-background-color: #ecf0f1; -fx-padding: 15;">
                    <children>
                        <VBox alignment="CENTER" spacing="3">
                            <children>
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" text="EMAIL">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                                <Label fx:id="previewEmail" style="-fx-text-fill: #2c3e50;" text="email@example.com">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <Separator orientation="VERTICAL" prefHeight="30" />

                        <VBox alignment="CENTER" spacing="3">
                            <children>
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" text="PHONE">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                                <Label fx:id="previewPhone" style="-fx-text-fill: #2c3e50;" text="+880123456789">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <Separator orientation="VERTICAL" prefHeight="30" />

                        <VBox alignment="CENTER" spacing="3">
                            <children>
                                <Label style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" text=" ADDRESS">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                                <Label fx:id="previewAddress" maxWidth="200" style="-fx-text-fill: #2c3e50;" text="House No, City, Division, Country" wrapText="true">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <VBox spacing="25" style="-fx-padding: 30 40 30 40;">
                    <children>

                        <VBox spacing="12">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>
                                        <Label style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="EDUCATION">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <Separator style="-fx-background-color: #3498db; -fx-pref-height: 2;" />

                                <VBox spacing="8" style="-fx-padding: 10 0 0 20;">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="15">
                                            <children>
                                                <VBox prefWidth="280" spacing="5">
                                                    <children>
                                                        <Label style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" text="Secondary School Certificate (SSC)">
                                                            <font>
                                                                <Font size="11.0" />
                                                            </font>
                                                        </Label>
                                                        <Label fx:id="previewSSC" style="-fx-text-fill: #2c3e50;" text="SSC Details">
                                                            <font>
                                                                <Font size="13.0" />
                                                            </font>
                                                        </Label>
                                                    </children>
                                                </VBox>

                                                <VBox prefWidth="280" spacing="5">
                                                    <children>
                                                        <Label style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" text="Higher Secondary Certificate (HSC)">
                                                            <font>
                                                                <Font size="11.0" />
                                                            </font>
                                                        </Label>
                                                        <Label fx:id="previewHSC" style="-fx-text-fill: #2c3e50;" text="HSC Details">
                                                            <font>
                                                                <Font size="13.0" />
                                                            </font>
                                                        </Label>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>

                                        <HBox alignment="CENTER_LEFT" spacing="15">
                                            <children>
                                                <VBox prefWidth="280" spacing="5">
                                                    <children>
                                                        <Label style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" text="Bachelor's Degree (BSC)">
                                                            <font>
                                                                <Font size="11.0" />
                                                            </font>
                                                        </Label>
                                                        <Label fx:id="previewBSC" style="-fx-text-fill: #2c3e50;" text="BSC Details">
                                                            <font>
                                                                <Font size="13.0" />
                                                            </font>
                                                        </Label>
                                                    </children>
                                                </VBox>

                                                <VBox prefWidth="280" spacing="5">
                                                    <children>
                                                        <Label style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" text="Master's Degree (MSC)">
                                                            <font>
                                                                <Font size="11.0" />
                                                            </font>
                                                        </Label>
                                                        <Label fx:id="previewMSC" style="-fx-text-fill: #2c3e50;" text="MSC Details">
                                                            <font>
                                                                <Font size="13.0" />
                                                            </font>
                                                        </Label>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <VBox spacing="12">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>
                                        <Label style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="SKILLS">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <Separator style="-fx-background-color: #3498db; -fx-pref-height: 2;" />

                                <Label fx:id="previewSkills" style="-fx-text-fill: #34495e; -fx-padding: 10 0 0 20; -fx-line-spacing: 3;" text="Your Skills Here" wrapText="true">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <VBox spacing="12">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>
                                        <Label style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="EXPERIENCE">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <Separator style="-fx-background-color: #3498db; -fx-pref-height: 2;" />

                                <Label fx:id="previewExperience" style="-fx-text-fill: #34495e; -fx-padding: 10 0 0 20; -fx-line-spacing: 3;" text="Your Experience Here" wrapText="true">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <VBox spacing="12">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>
                                        <Label style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="PROJECTS">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <Separator style="-fx-background-color: #3498db; -fx-pref-height: 2;" />

                                <Label fx:id="previewProjects" style="-fx-text-fill: #34495e; -fx-padding: 10 0 0 20; -fx-line-spacing: 3;" text="Your Projects Here" wrapText="true">
                                    <font>
                                        <Font size="13.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                    </children>
                </VBox>


                <VBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
                    <children>
                        <Label style="-fx-text-fill: #95a5a6; -fx-font-style: italic;" text="Generated by CV Builder">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

            </children>
        </VBox>
    </content>
</ScrollPane>
