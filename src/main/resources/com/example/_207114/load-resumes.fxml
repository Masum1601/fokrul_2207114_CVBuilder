<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="700.0" spacing="15" style="-fx-background-color: #e6f0fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example._207114.LoadResumesController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <children>
        <Label text="Saved Resumes" style="-fx-text-fill: #333;">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <ProgressIndicator fx:id="progressIndicator" visible="false" />

        <TableView fx:id="resumeTable" prefHeight="350.0" prefWidth="660.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Full Name" />
                <TableColumn fx:id="emailColumn" prefWidth="285.0" text="Email" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="15" prefHeight="50.0">
            <children>
                <Button fx:id="loadButton" onAction="#onLoad" prefWidth="120" prefHeight="35"
                        style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Load Selected">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>

                <Button fx:id="deleteButton" onAction="#onDelete" prefWidth="120" prefHeight="35"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Delete">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>

                <Button onAction="#onRefresh" prefWidth="120" prefHeight="35"
                        style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Refresh">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>

                <Button fx:id="backButton" onAction="#onBack" prefWidth="120" prefHeight="35"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Back">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>